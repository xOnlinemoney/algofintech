# Slack Bot Token (xoxb-...) — needs channels:history, reactions:write, chat:write
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack App-Level Token (xapp-...) — for Socket Mode
SLACK_APP_TOKEN=xapp-your-app-token

# Slack channel ID where account notifications are posted
SLACK_CHANNEL_ID=C0123456789

# Trade-Copier login (fallback if session expires)
TC_EMAIL=your-email@example.com
TC_PASSWORD=your-password

# Chrome user data dir (to persist login session)
CHROME_USER_DATA_DIR=./chrome-data
